<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="94dp"
        android:layout_height="25dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:hint="@string/prompt_total"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.022"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSurplus"
        android:layout_width="363dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_style"
        android:hint="@string/prompt_surplus"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTotal" />

    <TextView
        android:id="@+id/tvSpend"
        android:layout_width="94dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:hint="@string/prompt_spend"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayoutSpend"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutSpend"
        android:layout_width="363dp"
        android:layout_height="230dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/edit_text_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/Ibtn1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/edit_text_style"
            android:src="@drawable/food"
            app:layout_constraintBottom_toTopOf="@+id/tv1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:hint="@string/prompt_food"
            app:layout_constraintStart_toStartOf="@id/Ibtn1"
            app:layout_constraintTop_toBottomOf="@id/Ibtn1" />

        <ImageButton
            android:id="@+id/Ibtn2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/edit_text_style"
            android:src="@drawable/living"
            app:layout_constraintEnd_toStartOf="@id/Ibtn3"
            app:layout_constraintStart_toEndOf="@id/Ibtn1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:hint="@string/prompt_living"
            app:layout_constraintEnd_toEndOf="@id/Ibtn2"
            app:layout_constraintStart_toStartOf="@id/Ibtn2"
            app:layout_constraintTop_toBottomOf="@id/Ibtn2" />

        <ImageButton
            android:id="@+id/Ibtn3"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/edit_text_style"
            android:src="@drawable/car"
            app:layout_constraintBottom_toTopOf="@+id/tv3"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="112dp"
            android:gravity="center"
            android:hint="@string/prompt_car"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/Ibtn4"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/edit_text_style"
            android:src="@drawable/boy"
            app:layout_constraintBottom_toTopOf="@+id/tv4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv1" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:hint="@string/prompt_boy"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/Ibtn5"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/edit_text_style"
            android:src="@drawable/fashion"
            app:layout_constraintBottom_toTopOf="@+id/tv5"
            app:layout_constraintEnd_toStartOf="@id/Ibtn6"
            app:layout_constraintStart_toEndOf="@id/Ibtn4"
            app:layout_constraintTop_toBottomOf="@+id/tv2" />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:hint="@string/prompt_fashion"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv6"
            app:layout_constraintStart_toEndOf="@+id/tv4" />

        <ImageButton
            android:id="@+id/Ibtn6"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/edit_text_style"
            android:src="@drawable/healthcare"
            app:layout_constraintBottom_toTopOf="@+id/tv6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv3" />

        <TextView
            android:id="@+id/tv6"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:hint="@string/prompt_healthcare"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="363dp"
        android:layout_height="115dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/edit_text_style"
        app:layout_constraintBottom_toTopOf="@+id/tvSpend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/ibtn7"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/edit_text_style"
            android:src="@drawable/personal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.08" />

        <ImageButton
            android:id="@+id/ibtn8"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="66dp"
            android:layout_marginLeft="68dp"
            android:background="@drawable/edit_text_style"
            android:src="@drawable/money"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ibtn7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.12" />

        <TextView
            android:id="@+id/tv7"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:hint="@string/prompt_loan"
            app:layout_constraintStart_toStartOf="@+id/ibtn7"
            app:layout_constraintTop_toBottomOf="@+id/ibtn7" />

        <TextView
            android:id="@+id/tv8"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:hint="@string/prompt_lend"
            app:layout_constraintEnd_toEndOf="@+id/ibtn8"
            app:layout_constraintStart_toStartOf="@+id/ibtn8"
            app:layout_constraintTop_toBottomOf="@+id/ibtn8" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvLoan"
        android:layout_width="94dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:hint="@string/prompt_loan"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.022"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSurplus"
        app:layout_constraintVertical_bias="0.808" />

