<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.doanjava">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.notifications.UpdateHistoryActivity"></activity>
        <activity
            android:name=".ui.notifications.SettingActivity"
            android:label="Setting Activity" />
        <activity
            android:name=".ui.notifications.UpdateBalanceActivity"
            android:label="@string/update_balance" />
        <activity
            android:name=".ui.notifications.AboutUsActivity"
            android:label="@string/item_about_us" />
        <activity
            android:name=".ui.notifications.ChangePasswordActivity"
            android:label="@string/change_password" />
        <activity
            android:name=".ui.authentication.LoginActivity"
            android:label="@string/title_sign_in" />
        <activity
            android:name=".ui.notifications.InformationUserActivity"
            android:label="@string/item_account_information" />
        <activity
            android:name=".ui.notifications.HistoryActivity"
            android:label="@string/item_history" />
        <activity
            android:name=".ui.loan.LoanActivity"
            android:label="@string/prompt_loan" />
        <activity
            android:name=".ui.authentication.RegisterActivity"
            android:label="@string/title_sign_up" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />

        <receiver android:name=".receivers.NotificationReceiver" />
    </application>

</manifest>